{
  "compilerOptions": {
    /* Base Options */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "esnext",
    "allowJs": false,
    "resolveJsonModule": true,
    "moduleDetection": "force",

    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,

    /* Transpilation */
    "moduleResolution": "nodenext",
    "module": "nodenext",
    "noEmit": true,
    "lib": ["ES2022"]
  }
}
